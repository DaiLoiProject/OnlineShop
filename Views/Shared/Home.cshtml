<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/page.style/home-StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">


    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>

</head>
<body>

    <!--Header-->
    <section id="header">

        <!-- Navbar + logo + icons -->
        <div class="header-center-inner">
            <!-- Left: social icons -->
            <div class="header-left">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-tiktok"></i></a>
            </div>

            <!-- Center: logo -->
            <div class="header-logo">
                <a href="@Url.Action("Index", "TrangChu")">
                    <img src="~/Pictures/Phoenix.png" class="logo" alt="Phoenix" width="100" height="100" />
                </a>
            </div>

            <!-- Right: function icons -->
            <div class="header-right">
                <a href="#"><i class="fas fa-search"></i></a>
                <a href="#"><i class="fas fa-user"></i></a>
                <a href="card.html"><i class="fa-solid fa-bag-shopping"></i></a>
            </div>
        </div>





        <div>
            <ul id="navbar">
                <li><a class="active" href="@Url.Action("Index", "TrangChu")">HOME</a></li>
                <li><a href="@Url.Action("Index", "Shop")">SHOP</a></li>
                <li><a href="blog.html">BESTSELLERS</a></li>
                <li><a href="about.html">COLLECTIONS</a></li>
            </ul>
        </div>
    </section>

    <!--Home_Page-->

    <section id="home_page">
        <img src="@Url.Content("~/Pictures/background1.jpg")" />
        <img src="@Url.Content("~/Pictures/background2.jpg")" />
        <img src="@Url.Content("~/Pictures/background3.jpg")" />
        <img src="@Url.Content("~/Pictures/background4.jpg")" />
        <img src="@Url.Content("~/Pictures/background5.jpg")" />
        <img src="@Url.Content("~/Pictures/background6.jpg")" />
    </section>
    <div>
        @RenderBody()
    </div>
</body>
</html>
